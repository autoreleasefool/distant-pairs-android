<android.support.v7.widget.CardView
    android:id="@+id/cl_thought_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/primary_color_light"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    tools:ignore="RtlSymmetry,RtlHardCoded">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_settings"
        android:drawablePadding="@dimen/thought_horizontal_padding"
        android:gravity="left|center_vertical"
        android:padding="@dimen/thought_horizontal_padding"
        android:text="@string/action_settings" />

</android.support.v7.widget.CardView>
